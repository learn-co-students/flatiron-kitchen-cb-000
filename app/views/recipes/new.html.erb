<%= form_for @recipe do |f|%>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>


 <div class="field">
    <span>Ingredients:</span>
    <%= f.fields_for :ingredients, @recipe.ingredients.build do |ingredient_form| %>
      Name <%= ingredient_form.label :name %>
      Name <%= ingredient_form.text_field :name %>
    <% end %>
  </div>

 <div class="field">
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br>
  </div>



  <%= f.submit %>
  
  
<% end %>
