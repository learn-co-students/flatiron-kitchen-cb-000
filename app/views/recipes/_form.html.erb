<%= form_for recipe do |f|%>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>
<h2>Ingredients</h2>
<p>
  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
</p>
<h2> New Ingredient to Add </h2>
<p>
  <%= f.fields_for :ingredients, recipe.ingredients.build do |r| %>
    <%= r.text_field :name %>
  <% end %>
  <br />
  <%= f.submit %>
<% end %>
