<h3>New Recipe</h3>
<%= form_for recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <h3>Ingredients</h3>
  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
  <h3>New Ingredient</h3>
  <%= f.fields_for :ingredients, @recipe.ingredients.build do |i| %>
    <%= i.label :name %>
    <%= i.text_field :name %>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
