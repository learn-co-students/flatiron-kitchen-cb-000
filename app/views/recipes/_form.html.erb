<section class='form'>
  <%= form_for recipe do |f| %>

    <section class='field'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </section>

    <section class='field'>
      <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
    </section>

    <section class='field'>
      <%= f.fields_for :ingredient, Ingredient.new() do |ingredient_field| %>
        <%= ingredient_field.label :name %>
        <%= ingredient_field.text_field :name %>
      <% end %>
    </section>

    <section class='submit'>
      <%= f.submit %>
    </section>

  <% end %>
</section>
