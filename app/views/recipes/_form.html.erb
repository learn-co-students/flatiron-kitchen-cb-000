
  <%= form_for recipe do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>

      <%= f.fields_for :ingredient, Ingredient.new() do |ingredient| %>
        <%= ingredient.label :name %>
        <%= ingredient.text_field :name %>
      <% end %>

      <%= f.submit %>
  <% end %>
